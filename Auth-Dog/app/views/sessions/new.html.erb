<style>
.container{
 margin-top:200px;
 margin-left:150px;
}
body{
background: #1782ed;

}

h1{
font-family:'Fredoka One', cursive;
color:white;
font-size: 70px;

}
h2{
font-family:'Fredoka One', cursive;
color:white;
font-size: 40px;

}

.btn-dark{
 margin-top:5px;

}
</style>






<div class="container">
<div class="row">

  <div class="col-md-6">
     <h1><img src="https://image.flaticon.com/icons/svg/194/194177.svg"width="200" height="200"> Facedog</h1>

  </div>
  <div class="col-6">
    <div class="col-md-6 col-md-offset-3">
        <h2>Bienvenidos</h2>
        <%= form_for(:session, url: login_path) do |f| %>

          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>

          <%= f.submit "Log in", class: "btn btn-dark btn-md" %>

        <% end %>
         <%= link_to 'Sing up ', singup_path, class: "btn btn-dark btn-md" %>
      </div>
    </div>
</div>
</div>
